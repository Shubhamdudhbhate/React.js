<%- include('partials/head') %>
<style>
/* Initial Fade-In + Slide Animation */
@keyframes fadeSlideIn {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.preview-container,
.form-container {
  opacity: 0; /* start invisible */
  animation: fadeSlideIn 0.8s ease forwards; /* play animation */
}

/* Staggered effect: form appears slightly after card */
.form-container {
  animation-delay: 0.3s;
}



  body {
    background: linear-gradient(135deg, #000000, #000000);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
  }

  /* Card Preview */
  .card-preview {
    border-radius: 1.5rem;
    overflow: hidden;
    color: #ffffff;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    transition: transform 0.5s ease, box-shadow 0.5s ease;
    background-color: rgb(0, 0, 0);
    max-width: 320px;
    margin: auto;
    border-color: #ffffff;
  }
  .card-preview:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgb(255, 255, 255);
    
  }
  .card-preview img {
    width: 100%;
    height: 200px;
    object-fit: cover;

  }
  .card-preview-content {
    padding: 1.5rem;
  }
  .card-preview-content h3 {
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
    color: #ffffff;
  }
  .card-preview-content p {
    font-size: 1rem;
    color: #ffffff;
    margin-bottom: 0.75rem;
  }
  .badge {
    display: inline-block;
    padding: 0.3rem 0.6rem;
    background-color: #f87171;
    color: white;
    border-radius: 0.5rem;
    font-size: 0.85rem;
    margin-right: 0.5rem;
  }

  /* Form Styling */
  .form-input {
    width: 100%;
    padding: 0.65rem 1rem;
    border-radius: 1rem;
    border: 1px solid #000000;
    outline: none;
    transition: all 0.3s ease;
  }
  .form-input:focus {
    border-color: #000000;
    box-shadow: 0 0 0 3px rgb(20, 255, 3);
  }
  .btn-submit {
    width: 100%;
    padding: 0.75rem;
    font-weight: 600;
    margin-top: 20px;
    color: white;
    background: linear-gradient(to right, #f87171, #ef4444);
    border-radius: 1rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .btn-submit:hover {
    background: linear-gradient(to right, #ef4444, #dc2626);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    transform: translateY(-2px);
  }

  /* Layout */
  .container-flex {
    display: flex;
    gap: 3rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
    padding: 3rem 1.5rem;
  }
  .form-container{
    flex: 1 1 380px;
    max-width: 450px;
    background: rgb(0, 0, 0);
    padding: 2rem;
    border-radius: 1.5rem;
    box-shadow: 0 10px 25px rgb(255, 255, 255);
  }

  
  .preview-container {
    flex: 1 1 320px;
    max-width: 340px;
    box-shadow: #ffffff;
  }

  /* Typography */
  h1 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 0.5rem;
  }
  p {
    color: #ffffff;
  }
</style>
</head>
<body>
  <%- include('partials/nav') %>

  <main class="container-flex">
    <!-- Live Preview Card -->
    <div class="preview-container">
      <div class="card-preview" id="previewCard">
        <img id="previewImage" src="https://via.placeholder.com/300x180?text=Preview+Image" alt="Preview">
        <div class="card-preview-content">
          <h3 id="previewName">House Name</h3>
          <p id="previewLocation">Location</p>
          <div>
            <span class="badge" id="previewPrice">₹0 / night</span>
            <span class="badge" id="previewRating">⭐0</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="form-container">
      <h1>Register Your Home</h1>
      <p class="mb-4 text-sm">Add your property and see preview in real-time</p>

      <form action="/host/add-home" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-white mb-1">>House Name</label>
          <input type="text" name="houseName" id="houseName" placeholder="Ex: Cozy Lake Cabin" class="form-input">
        </div>

        <div>
          <label class="block text-sm font-medium text-white mb-1">>Price Per Night</label>
          <input type="number" name="price" id="price" placeholder="Ex: 2500" class="form-input">
        </div>

        <div>
          <label class="block text-sm font-medium text-white mb-1">>Location</label>
          <input type="text" name="location" id="location" placeholder="Ex: Jaipur, India" class="form-input">
        </div>

        <div>
          <label class="block text-sm font-medium text-white mb-1">Rating</label>
          <input type="number" step="0.1" max="5" min="0" name="rating" id="rating" placeholder="Ex: 4.8" class="form-input">
        </div>

        <div>
          <label class="block text-sm font-medium text-white mb-1">>Photo URL</label>
          <input type="url" name="photoUrl" id="photoUrl" placeholder="https://example.com/home.jpg" class="form-input">
        </div>

        <button type="submit" class="btn-submit">Submit Home</button>
      </form>
    </div>
  </main>

  <script>
    const houseNameInput = document.getElementById('houseName');
    const priceInput = document.getElementById('price');
    const locationInput = document.getElementById('location');
    const ratingInput = document.getElementById('rating');
    const photoUrlInput = document.getElementById('photoUrl');

    const previewName = document.getElementById('previewName');
    const previewPrice = document.getElementById('previewPrice');
    const previewLocation = document.getElementById('previewLocation');
    const previewRating = document.getElementById('previewRating');
    const previewImage = document.getElementById('previewImage');

    houseNameInput.addEventListener('input', () => previewName.textContent = houseNameInput.value || "House Name");
    priceInput.addEventListener('input', () => previewPrice.textContent = `₹${priceInput.value || 0} / night`);
    locationInput.addEventListener('input', () => previewLocation.textContent = locationInput.value || "Location");
    ratingInput.addEventListener('input', () => previewRating.textContent = `⭐${ratingInput.value || 0}`);
    photoUrlInput.addEventListener('input', () => previewImage.src = photoUrlInput.value || "https://via.placeholder.com/300x180?text=Preview+Image");
  </script>
</body>
</html>
